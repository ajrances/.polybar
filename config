[module/mpd]
type = internal/mpd

; Host where mpd is running (either ip or domain name)
; Can also be the full path to a unix socket where mpd is running.
host = 127.0.0.1
port = 6600
; password = mysecretpassword

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 1
format-online = <label-song>
label-song = ÔÄÅ  %artist% - %title%
label-song-foreground = ${colors.yellow}

[module/time]

type = internal/date
interval = 60

format = <label>
format-background = ${colors.background-alt}
format-foreground = ${colors.gray}
date = ÔÄó  %I:%M %p
time-alt = %a %b %d
label = %date%%time%

[module/mem]

type = custom/script
exec = free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p'
format = <label>
format-prefix = "Ô¨ô  " 
label = %output% MB
format-background = ${colors.background-alt}
format-foreground = ${colors.orange}

[module/launcher]
type = custom/text
content ="ÔÉó≠ "
click-left = rofi -show drun
content-foreground = ${colors.green}
label-padding-right = 1

[module/powermenu]
type = custom/text 
content ="ÔÄë" 
content-padding = 2
click-left = rofi -show power-menu -modi power-menu:rofi-power-menu
content-foreground = ${colors.alert}

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected =  <label-connected>
label-connected = "Û∞§™  " 
label-connected-foreground = #A3BE8C 

[module/weather]
type = custom/script
exec = ~/.config/polybar/scripts/weather.sh
tail = false
interval = 600

[module/cpu]

type = internal/cpu
interval = 2.5

format-prefix ="Ô°ö  " 
format =  <label> 

label = CPU %percentage%%
format-background = ${colors.background-alt}
format-foreground = ${colors.magenta}

[module/xwindow]

type = internal/xwindow
label = %title:0:30:...%
label-foreground = ${colors.cyan}

[module/cputemp]
type = custom/script
exec = sensors | grep "Package id 0:" | tr -d '+' | awk '{print $4}'
format-prefix = "Ôãä "
format-background = ${colors.background-alt}
format-foreground = ${colors.teal}
interval = 2
