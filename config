
include-file = ~/.config/polybar/themes/slime.ini

[bar/example]

tray-padding = 2
tray-position = right
monitor = HDMI-0
width =  100%
height = 24pt

padding-left = 1
padding-right = 0

background = ${colors.background}
foreground = ${colors.foreground}
bottom = false
border-top-size = 5
border-bottom-size = 5
